@import "bootstrap/index"

html, body {
	height: 100%;
	overflow: hidden;
}

.scroll-wrapper {
	overflow: auto;
}

.no-gutter-left {
	padding-left: 0px;
}

.no-gutter-right {
	padding-right: 0px;
}

.no-row-margin-left {
	margin-left: 0px;
}

.no-row-margin-right {
	margin-right: 0px;
}

.splash {
	text-align: center;
	margin: 10% 0 0 0;
	
	.message {
		font-size: 5em;
		line-height: 1.5em;
		-webkit-text-shadow: rgba(0, 0, 0, 0.5) 0 0 15px;
		text-shadow: rgba(0, 0, 0, 0.5) 0 0 15px;
	}

	.fa-spinner {
		text-align: center;
		display: inline-block;
		font-size: 5em;
		margin-top: 50px;
	}
}

.page-host {
	height: calc(100% - 50px);
	margin-top: 50px;
}

.courses {
	position: absolute;
	top: 51px;
	left: 0;
	right: 0;
	bottom: 0;
	margin-left: 175px;
	transition: all .5s ease;

	&.sidebar-hidden {
		margin-left: 0px;
	}

	.sidebar-list {
		overflow-y: auto;
		// width: 200px;
		// position: absolute;
		top: 50px;
		left: 0;
		bottom: 0;
		border: 0;
		padding: 0;
		background: #eee;
	}
}

.sidebar-wrapper {
	z-index: 1000;
	position: fixed;
	width: 175px;
	height: calc(100% - 50px);
	margin-left: 0px;
	overflow-y: auto;
	background: rgb(206, 206, 206);
	-webkit-transition: all 0.5s ease;
	-moz-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

	&.sidebar-hidden {
		margin-left: -175px;
	}

	ul {
		margin: 0;
		padding: 0;
		// list-style: none;

		li {
			text-indent: 20px;
			line-height: 40px;

			a {
				display: block;
				text-decoration: none;
				color: #555;
				
				&:hover {
					text-decoration: none;
					color: #fff;
					background: rgba(55,130,196,0.5);
				}

				&:active,
				&:focus {
					background: rgba(55,130,196,1);
					text-decoration: none;
					color: #fff;
				}
			}
		}
	}
}

.students {
	margin-left: 175px;

	router-view {
		position: static;
		overflow: auto;
	}
}

.panel-container {
	height: 100%;
	overflow: auto;

	.panel {
		// position: absolute;
		// top: 0;
		// left: 0;
		// bottom: 0;
		// right: 0;

		.panel-heading {
			text-align: right;
			max-height: 55px;
		}

		.panel-footer {
			bottom: 0;
			text-align: right;
			max-height: 55px;
		}

		.grid-display-wrapper {
			// position: absolute;
			overflow: scroll;
			max-height: 460px;
			height: 100%;
		}
		
		.grid {

		}

		.table {
			margin-top: 55px;
			margin-bottom: 110px;
			text-align: right;
		}

		.studentname {
			width: 120px;
			text-align: left;
		}

		.assignment {
			width: 100px;
			min-width: 100px;
		}
		
		.finalgrade {
			width: 90px;
			max-width: 90px;
		}

		.score {
			font-size: 0.8em;
			font-style: italic;
		}

		.percentage {
			font-size: 1.3em;
		}
	}
}

section {
	margin: 0 20px;
}

a:focus {
	outline: none;
}

.navbar-nav li.loader {
	margin: 12px 24px 0 6px;
}

.no-selection {
	margin: 20px;
}

.button-bar {
	position: absolute;
	right: 0;
	left: 0;
	bottom: 0;
	border-top: 1px solid #ddd;
	padding: 10px;
	background: white;
  
	> button {
		float: right;
	}
}

li.list-group-item {
	list-style: none;
  
	> a {
		text-decoration: none;
	}

	.active > a {
		color: white;
	}
}